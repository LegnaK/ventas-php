{{#extends "_layout"}}
    {{#if localeLinks}}
        {{#override "menu"}}{{> _locales}}{{/override}}
    {{/if}}

    {{#override "content"}}
        {{l10n "Follow the wizard to setup your database."}}

        <br/>
        <br/>

        {{> _errors}}

        {{#if done}}
            <div id="install">
                <div class="mform">
                    <div class="formtop">
                        <div class="formtopi"></div>
                    </div>

                    <div class="forminner">
                        {{l10n "Completed:"}}

                        <ul>
                            {{#each done}}
                                <li>{{{this}}}</li>
                            {{/each}}
                        </ul>

                        {{#unless errors}}
                            {{#block "nextStep"}}
                                {{#if nextstep}}
                                    <br/>
                                    <br/>

                                    {{l10n "Next step:"}}

                                    <ul>
                                        <li>
                                            {{#if nextnotice}}
                                                {{{nextnotice}}}<br/><br/>
                                            {{/if}}

                                            <a href="{{nextstepurl}}">{{nextstep}}</a>
                                        </li>
                                    </ul>
                                {{/if}}
                            {{/block}}
                        {{/unless}}
                    </div>

                    <div class="formbottom">
                        <div class="formbottomi"></div>
                    </div>
                </div>
            </div>
        {{/if}}

        <br/>
        <a href="{{route "license"}}">{{l10n "Software license agreement"}}</a>
    {{/override}}
{{/extends}}